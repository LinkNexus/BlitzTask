@model BlitzTask.Features.Auth.PasswordResetModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <style>
                body {
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
                    line-height: 1.6;
                    color: #333;
                    max-width: 600px;
                    margin: 0 auto;
                    padding: 20px;
                }
                .container {
                    background-color: #f9fafb;
                    border-radius: 8px;
                    padding: 20px;
                }
                .header {
                    text-align: center;
                    margin-bottom: 30px;
                }
                .logo {
                    font-size: 28px;
                    font-weight: bold;
                    color: #000;
                }
                h1 {
                    color: #1f2937;
                    font-size: 24px;
                    margin: 20px 0;
                }
                .content {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 6px;
                    margin-bottom: 20px;
                }
                .button {
                    display: inline-block;
                    background-color: #dc2626;
                    color: white;
                    text-decoration: none;
                    padding: 12px 30px;
                    border-radius: 6px;
                    margin: 20px 0;
                    font-weight: 600;
                }
                .button:hover {
                    background-color: #b91c1c;
                }
                .footer {
                    text-align: center;
                    font-size: 12px;
                    color: #6b7280;
                    margin-top: 30px;
                    padding-top: 20px;
                    border-top: 1px solid #e5e7eb;
                }
                .code-block {
                    background-color: #f3f4f6;
                    padding: 15px;
                    border-radius: 4px;
                    margin: 20px 0;
                    font-family: 'Courier New', monospace;
                    word-break: break-all;
                }
                .notice {
                    font-size: 13px;
                    color: #6b7280;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">BlitzTask</div>
        </div>

        <div class="content">
            <h1>Reset Your Password</h1>

            <p>Hi @Model.UserName,</p>

            <p>We received a request to reset the password for your BlitzTask account. Click the button below to choose a new password:</p>

            <center>
                <a href="@Model.ResetLink" class="button">Reset Password</a>
            </center>

            <p>Or copy and paste this link in your browser if the button doesn't work:</p>

            <div class="code-block">@Model.ResetLink</div>

            <p>This reset link will expire in 30 minutes.</p>

            <p class="notice">If you didn't request a password reset, you can safely ignore this email. Your password will not be changed.</p>
        </div>

        <div class="footer">
            <p>&copy; @DateTime.UtcNow.Year BlitzTask. All rights reserved.</p>
            <p>Questions? Contact us at support@blitztask.com</p>
        </div>
    </div>
</body>
</html>

